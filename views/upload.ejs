    <div class="card card-center" style="width:30%">
        <div class="card-body">
    <h2>Upload Dialogues</h2><br>
    <form action="/upload-files" method="post" encType="multipart/form-data">
        <div class="form-group">
          <label>Enter dialogue name</label>
          <input type="text" class="form-control" name="dialogue"  placeholder="Enter dialogue name">
        </div>
        <div class="custom-file">
            <label class="custom-file-label" for="customFile">Choose document</label>
            <input type="file" accept=".html" name="document" class="custom-file-input" id="upload-document">
          </div><br>
        <div class="custom-file">
            <label class="custom-file-label" for="customFile">Choose audio</label>
            <input type="file" accept=".mp3" name="audio" class="custom-file-input" id="upload-audio">
          </div><br>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>
